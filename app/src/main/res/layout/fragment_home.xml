<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/yellow"
    tools:context=".FragmentABC.FragmentHome"
    android:id="@+id/Homelayout"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/viewpager2Slide"/>
    <me.relex.circleindicator.CircleIndicator
        android:layout_below="@+id/viewpager2Slide"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/circleIndicator"
        android:layout_marginTop="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/circleIndicator"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="hardware"
        android:id="@+id/fragmentproduct_rclView"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        android:src="@drawable/iconsearch"
        android:id="@+id/floatingbutton"
        />
</RelativeLayout>