<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/itemproduct_cardView"
    app:cardCornerRadius="12dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/product_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/yellow" />

        <LinearLayout
            android:id="@+id/item_product_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/product_item_img"
            android:layout_toRightOf="@+id/product_item_img"
            android:orientation="vertical">

            <TextView
                android:textColor="#B11A4A"
                android:textSize="25sp"
                android:id="@+id/product_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OK" />

            <TextView
                android:textColor="#20DDE3"
                android:textSize="20sp"
                android:id="@+id/product_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Day la ID" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>